<h1>Pets#new</h1>
<%= form_for @pet do |f| %>

        <div>
            <%= f.label :name %>
            <%= f.text_field :name %>
        </div>

        <div>
            <%= f.label :age %>
            <%= f.number_field :age %>
        </div>

        <div>
            <%= f.label :species %>
            <%= f.text_field :species %>
        </div>

        <div>
            <%= f.label :available %>
            <%= f.check_box :available %>
        </div>

        <div>
            <%= f.label :height %>
            <%= f.number_field :height, :step => 'any' %>
        </div>

        <%= f.submit %>

    <% end %>

