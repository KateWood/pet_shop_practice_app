<h1>Pets</h1>

<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Age</th>
			<th>Species</th>
			<th>Available?</th>			
		</tr>
	</thead>

	<tbody>
		<% @pets.each do |pet| %>
			<tr>
				<td><%= pet.name %></td>
				<td><%= pet.age %></td>
				<td><%= pet.species %></td>
				<td><%= pet.available %></td>
			</tr>
		<% end %>
	</tbody>
</table>
